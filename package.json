{
  "name": "typescript-starter-project",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "start-typescript-development": "tsc-watch --onSuccess 'npm --silent run test-and-eslint'",
    "test-and-eslint": "npm run test && npm run eslint",
    "test": "mocha --reporter min --require esm --require ./setup-jsdom.js",
    "eslint": "eslint --cache -f unix --ext .ts src/ test/",
    "build-bundle": "rollup --config",
    "uml": "tplant --input src/app.ts --output uml-diagram.svg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.9.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "12.0.10",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint": "6.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "6.0.0",
    "esm": "^3.2.25",
    "jsdom": "^15.1.0",
    "mocha": "^6.1.4",
    "rollup": "1.16.2",
    "tsc-watch": "2.2.1",
    "typescript": "^3.4.5"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "trailingComma": "all"
  }
}
